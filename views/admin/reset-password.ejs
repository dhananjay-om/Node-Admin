
<%- include('./partials/header.ejs') %> 
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
          <!-- Display the error message -->
          <% if (errorMsg) { %>
            <script>
                Swal.fire({
                    position: "top-end",
                    icon: "error",
                    title: "<%= errorMsg %>",
                    showConfirmButton: false,
                    timer: 2500
                });
            </script>
        <% } %>
        <!-- Display the success message -->
        <% if (successMsg) { %>
            <script>
                Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "<%= successMsg %>",
                    showConfirmButton: false,
                    timer: 4000
                });
            </script>
        <% } %>
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
              <div class="brand-logo">
                <img src="/admin/assets/images/logo.svg">
              </div>
              <h4>Hello! let's get started</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-3" action="/reset-password/<%= token %>" method="post">
                <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="password" placeholder="New Password" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="confirmPassword" placeholder="Confirm New Password" required>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-gradient-primary me-2">Reset Password</button>
                </div>
                
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <%- include('./partials/footer.ejs') %>  